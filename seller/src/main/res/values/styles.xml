<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AnimationPop">
        <item name="android:windowEnterAnimation">@anim/in_from_down</item>
        <item name="android:windowExitAnimation">@anim/out_to_top</item>
    </style>
    <style name="PopDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="home_tab_bottom">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/txt_title</item>
    </style>


    <style name="TitleStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/title_bg</item>
    </style>
  <style name="StyledIndicatorsTheme" parent="AppTheme">
      <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
  </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@android:color/white</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:divider">@android:color/black</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="selectedColor">#FFCC0000</item>
    </style>
    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

</resources>
