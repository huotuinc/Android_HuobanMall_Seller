<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/main_header_bg"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_marginTop="@dimen/space_5">
    <Button
        android:id="@+id/header_back"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/btn_back"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/header_title"
        android:layout_toLeftOf="@id/header_operate"
        android:layout_toRightOf="@id/header_logo"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:text="更多统计"
        android:textSize="@dimen/text_size_25"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/morestatistic_title2"
        android:layout_width="match_parent"
        android:padding="@dimen/space_5"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/morestatistic_total_image"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:background="@mipmap/ddtj"/>
        <TextView
            android:id="@+id/morestatistic_OrderCount"
            android:layout_alignTop="@id/morestatistic_total_image"
            android:layout_toRightOf="@id/morestatistic_total_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20"
            android:layout_marginLeft="@dimen/space_10"
            android:textColor="@color/white"
            android:text="153" />
        <TextView
            android:id="@+id/morestatisitc_title_text"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/morestatistic_total_image"
            android:layout_toRightOf="@id/morestatistic_total_image"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:text="订单总数"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/morestatistic_arrow1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_15"
            android:background="@mipmap/info_arrow"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@+id/morestatistic_total_image"/>

    </RelativeLayout>

</LinearLayout>