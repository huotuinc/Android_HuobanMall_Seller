<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"

        >

        <RadioButton
            android:layout_centerVertical="true"
            android:id="@+id/radioButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/radiobutton"
            android:button="@null"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <com.android.volley.toolbox.NetworkImageView
            android:layout_centerVertical="true"
            android:id="@+id/goods_imageView"
            android:layout_width="60dp"
            android:layout_marginLeft="10dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/radioButton"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s地方说的方式发生地方多舒服舒服水电费水"
            android:layout_alignTop="@+id/goods_imageView"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/goods_inventory"
            android:layout_alignLeft="@+id/goods_inventory"
            android:layout_alignStart="@+id/goods_inventory"
            android:text="产品分类：" />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/cplx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:text="干果" />


        <TextView
            android:id="@+id/goods_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goods_imageView"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/goods_imageView"
            android:text="￥ "
            android:textColor="@color/main_header_bg"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/goods_inventory"
            android:layout_toEndOf="@+id/goods_inventory"
            android:layout_toRightOf="@+id/goods_inventory"
            android:text="100"
            android:textColor="@color/main_header_bg"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cplx"
            android:layout_toEndOf="@+id/cplx"
            android:layout_toRightOf="@+id/cplx"
            android:text="库存："
            android:textColor="@color/main_header_bg"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="1000"
            android:textColor="@color/main_header_bg"
            android:textSize="18sp" />

    </RelativeLayout>

</LinearLayout>