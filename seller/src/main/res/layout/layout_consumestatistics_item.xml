<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/zchyzrs"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/consumestatistics_imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:layout_alignTop="@+id/consumestatistics_imageView"
        android:layout_toRightOf="@+id/consumestatistics_imageView"
        android:id="@+id/consumestatistics_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(购买"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_alignTop="@+id/consumestatistics_imageView"
        android:layout_toRightOf="@+id/consumestatistics_name"
        android:id="@+id/consumestatistics_label1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:layout_alignTop="@+id/consumestatistics_label1"
        android:layout_toRightOf="@+id/consumestatistics_label1"
        android:layout_toEndOf="@+id/consumestatistics_label1"
        android:id="@+id/consumestatistics_amount" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/statistic_check_color"
        android:layout_alignTop="@+id/consumestatistics_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:id="@+id/consumestatistics_money" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总消费(元)"
        android:textColor="@color/black"
        android:layout_alignBottom="@+id/consumestatistics_imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/consumestatistics_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@+id/consumestatistics_imageView"
        android:layout_alignBottom="@+id/consumestatistics_imageView"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/consumestatistics_time"/>
</RelativeLayout>