<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/mainitem_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_menu_cpgl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_1"
            android:layout_marginTop="@dimen/space_1"
            android:layout_weight="1"
            android:background="@drawable/btn_menu"
            android:drawablePadding="@dimen/space_5"
            android:drawableTop="@mipmap/cpgl"
            android:padding="@dimen/space_10"
            android:text="产品管理"
            android:textSize="@dimen/text_size_12" />


        <Button
            android:id="@+id/main_menu_ddgl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_1"
            android:layout_marginTop="@dimen/space_1"
            android:layout_weight="1"
            android:background="@drawable/btn_menu"
            android:drawablePadding="@dimen/space_5"
            android:drawableTop="@mipmap/ddgl"
            android:padding="@dimen/space_10"
            android:text="订单管理"
            android:textSize="@dimen/text_size_12" />

        <Button
            android:id="@+id/main_menu_gdtj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_1"
            android:layout_marginTop="@dimen/space_1"
            android:layout_weight="1"
            android:background="@drawable/btn_menu"
            android:drawablePadding="@dimen/space_5"
            android:drawableTop="@mipmap/gdtj"
            android:padding="@dimen/space_10"
            android:text="更多统计"
            android:textSize="@dimen/text_size_12" />

        <Button
            android:id="@+id/main_menu_szgl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_1"
            android:layout_weight="1"
            android:background="@drawable/btn_menu"
            android:drawablePadding="@dimen/space_5"
            android:drawableTop="@mipmap/szgl"
            android:padding="@dimen/space_10"
            android:text="设置管理"
            android:textSize="@dimen/text_size_12" />


    </LinearLayout>


</LinearLayout>