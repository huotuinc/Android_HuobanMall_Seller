<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/order_item_ll1"
        android:paddingTop="@dimen/space_15"
        android:paddingBottom="@dimen/space_15"
        android:paddingRight="@dimen/space_10"
        android:paddingLeft="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_item_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            android:text="订单号："/>
        <TextView
            android:id="@+id/order_item_status"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="#FE3307"
            android:textSize="@dimen/text_size_15"
            android:text="交易完成"/>
        <TextView
            android:id="@+id/order_item_orderNo"
            android:layout_toRightOf="@id/order_item_label1"
            android:layout_toLeftOf="@id/order_item_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            android:text="243423423234"/>

    </RelativeLayout>

</RelativeLayout>