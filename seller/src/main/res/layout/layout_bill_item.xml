<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bill_item_ll1"
        android:background="#FFFFFF"
        android:paddingTop="@dimen/space_20"
        android:paddingBottom="@dimen/space_20"
        android:paddingRight="@dimen/space_10"
        android:paddingLeft="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bill_item_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18"
            android:text="订单号："/>
        <TextView
            android:id="@+id/bill_item_status"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="#FE3307"
            android:textSize="@dimen/text_size_18"
            android:text="交易完成"/>
        <TextView
            android:id="@+id/bill_item_orderNo"
            android:layout_toRightOf="@id/bill_item_label1"
            android:layout_toLeftOf="@id/bill_item_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18"
            android:text="243423423234"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bill_item_ll4"
        android:orientation="vertical"
        android:layout_below="@id/bill_item_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.huotu.huobanmall.seller.widget.MJListView
            android:id="@+id/bill_item_goodsList"
            android:dividerHeight="@dimen/space_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bill_item_ll3"
        android:layout_below="@id/bill_item_ll4"
        android:background="@color/white"
        android:layout_marginTop="@dimen/space_1"
        android:layout_marginBottom="@dimen/space_1"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bill_item_logistics"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/space_10"
            android:layout_marginTop="@dimen/space_10"
            android:paddingRight="@dimen/space_5"
            android:paddingLeft="@dimen/space_5"
            android:textColor="#51565F"
            android:gravity="center"
            android:background="@drawable/btn_logistic"
            android:text="查看物流"/>
        <TextView
            android:id="@+id/bill_item_pay"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_15"
            android:text="共1件商品 实付:￥234.23"/>

    </RelativeLayout>
</RelativeLayout>