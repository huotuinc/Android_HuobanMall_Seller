<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bill_item_ll2"
    android:paddingTop="@dimen/space_10"
    android:paddingBottom="@dimen/space_10"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/topsales_item_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_15"
        android:background="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:id="@+id/topsales_item_goods"
        android:layout_alignTop="@id/topsales_item_picture"
        android:layout_toRightOf="@id/topsales_item_picture"
        android:paddingRight="@dimen/space_10"
        android:paddingLeft="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/topsales_item_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:maxLines="2"
            android:textSize="@dimen/text_size_15"
            android:ellipsize="end"
            android:text="阿斯顿飞阿斯顿法师地撒旦法阿是打发受到发阿斯顿飞"
            android:layout_toLeftOf="@+id/topsales_item_top"
            android:layout_toStartOf="@+id/topsales_item_top" />
        <TextView
            android:id="@+id/topsales_item_ColorSize"
            android:layout_below="@id/topsales_item_goodsName"
            android:layout_marginTop="@dimen/space_5"
            android:layout_alignLeft="@id/topsales_item_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/main_header_bg"
            android:textSize="@dimen/text_size_15"
            android:text="￥ 5.00"/>
        <TextView
            android:id="@+id/topsales_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_14"
            android:text="68333人已购买"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/topsales_item_ColorSize"
            android:layout_alignBottom="@+id/topsales_item_ColorSize" />
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/yellow"
            android:layout_alignParentRight="true"
            android:id="@+id/topsales_item_top"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/white"
        />

    </RelativeLayout>

</RelativeLayout>
