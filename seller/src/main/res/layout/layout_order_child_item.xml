<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/space_5"
    android:paddingBottom="@dimen/space_5"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/test_order_child_item_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/space_10"
        android:text="订单号："/>

    <TextView
        android:id="@+id/test_order_child_item_status"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:textColor="#FE3307"
        android:textSize="@dimen/text_size_15"
        android:text="交易完成"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/test_order_child_item_childno"
        android:layout_toRightOf="@id/test_order_child_item_label1"
        android:layout_toLeftOf="@id/test_order_child_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2342342"/>
</RelativeLayout>