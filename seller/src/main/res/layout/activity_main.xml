<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/main_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">
        <include layout="@layout/layout_main_header"></include>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_Summary"
        android:layout_below="@id/main_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_summary_height">
        <com.john.waveview.WaveView
            android:id="@+id/main_waveView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_header_bg"
            wave:above_wave_color="@android:color/white"
            wave:blow_wave_color="@android:color/white"
            wave:wave_height="middle"
            wave:wave_hz="normal"
            wave:progress="20"
            wave:wave_length="middle"
            />
        <TextView
            android:id="@+id/main_todyMoney"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_30"
            android:textColor="@android:color/white"
            android:text="￥256454.25"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/main_today"
            android:layout_alignTop="@id/main_todyMoney"
            android:layout_toRightOf="@id/main_todyMoney"
            android:layout_marginLeft="@dimen/space_5"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日"/>
        <TextView
            android:id="@+id/main_totalMoney"
            android:layout_below="@id/main_todyMoney"
            android:textColor="@android:color/white"
            android:text="总销售额5,354,343(元)"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_info"
        android:layout_below="@id/main_Summary"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/main_info_bg"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="135"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="会员"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginBottom="@dimen/space_5"
            android:background="@android:color/black"
            android:layout_height="match_parent">
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="51"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="商品"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginBottom="@dimen/space_5"
            android:background="@android:color/black"
            android:layout_height="match_parent">
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="34"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="分销商"/>
        </LinearLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/main_gridView"
        android:layout_below="@id/main_info"
        android:layout_width="match_parent"
        android:numColumns="3"
        android:layout_marginTop="@dimen/space_5"
        android:layout_height="match_parent"/>

</RelativeLayout>
