<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="20dp"
    tools:context="com.huobanmall.seller.fragment.OrderFragment">

    <!--<com.handmark.pulltorefresh.library.PullToRefreshScrollView-->
        <!--android:id="@+id/order_pulltorefreshScrollView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--ptr:ptrAnimationStyle="flip">-->

        <RelativeLayout
            android:id="@+id/order_context"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/order_title"
                android:layout_width="match_parent"
                android:padding="@dimen/space_5"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/order_total_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/ddzs"/>
                <TextView
                    android:id="@+id/order_total"
                    android:layout_marginLeft="10dp"
                    android:layout_alignTop="@id/order_total_image"
                    android:layout_toRightOf="@id/order_total_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_16"
                    android:text="153" />
                <TextView
                    android:id="@+id/order_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_alignBottom="@id/order_total_image"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_16"
                    android:layout_toRightOf="@id/order_total_image"
                    android:text="订单总数"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_below="@+id/order_title_text"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/order_space1"
                android:layout_below="@id/order_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="@color/gray"/>


            <com.viewpagerindicator.TabPageIndicator
                android:id="@+id/order_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_space1"
                android:padding="@dimen/space_5"
                android:textColor="#AA000000"
                android:textSize="@dimen/text_size_20"
                ptr:footerColor="@color/indicator_footline_color"
                ptr:selectedColor="#FE3C00"
             />
            <RelativeLayout
                android:id="@+id/order_info"
                android:background="@color/order_info_bg"
                android:layout_below="@id/order_indicator"
                android:layout_width="match_parent"
                android:padding="@dimen/space_10"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/order_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:layout_marginLeft="15dp"
                    android:textColor="@android:color/black"
                    android:text="当前统计："/>
                <TextView
                    android:id="@+id/order_info_count"
                    android:layout_toRightOf="@id/order_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@android:color/black"
                    android:text="32"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/order_info"
                android:layout_marginTop="10dp"
                android:layout_above="@+id/order_statis1">
            <android.support.v4.view.ViewPager
                android:id="@+id/order_viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/order_statis1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/space_5"
                android:descendantFocusability="blocksDescendants"
                android:background="@drawable/btn_botton_menu"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_16"
                    android:text="商品销量前10名排列"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/order_arrow1"
                    android:layout_toStartOf="@+id/order_arrow1" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/order_arrow1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/hsjt"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/order_statis1"/>

        </RelativeLayout>
    <!--</com.handmark.pulltorefresh.library.PullToRefreshScrollView>-->

</RelativeLayout>
