<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huobanmall.seller.fragment.OrderFragment">

    <!--<com.handmark.pulltorefresh.library.PullToRefreshScrollView-->
        <!--android:id="@+id/order_pulltorefreshScrollView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--ptr:ptrAnimationStyle="flip">-->

        <RelativeLayout
            android:id="@+id/order_context"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/order_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/order_total_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ddzs"/>
                <TextView
                    android:id="@+id/order_total"
                    android:layout_alignTop="@id/order_total_image"
                    android:layout_toRightOf="@id/order_total_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_20"
                    android:text="153" />
                <TextView
                    android:id="@+id/order_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/order_total"
                    android:layout_toRightOf="@id/order_total_image"
                    android:text="订单总数"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/order_space1"
                android:layout_below="@id/order_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:background="@color/gray"/>


            <com.viewpagerindicator.TitlePageIndicator
                android:id="@+id/order_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_space1"
             />
            <android.support.v4.view.ViewPager
                android:id="@+id/order_viewPager"
                android:layout_below="@id/order_indicator"
                android:layout_above="@+id/order_statis1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>

            <RelativeLayout
                android:id="@+id/order_statis1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/space_5"
                android:background="@android:color/darker_gray"
                android:layout_margin="@dimen/space_5">
                <TextView
                    android:text="商品销量前10名排列"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_18"
                    android:layout_toLeftOf="@+id/order_arrow1"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/order_arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/info_arrow"/>
            </RelativeLayout>

        </RelativeLayout>
    <!--</com.handmark.pulltorefresh.library.PullToRefreshScrollView>-->

</RelativeLayout>
