<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rlTitle"
        style="@style/TitleStyle">

        <Button
            android:id="@+id/backImage"
            android:layout_width="12dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/title_back"
            android:onClick="onClickButton"
            />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_alignTop="@+id/backtext"
            android:layout_centerHorizontal="true"
            android:textColor="@color/txt_title"
            android:textSize="@dimen/main_title_text_size"/>

        <TextView
            android:id="@+id/backtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 返回"
            android:layout_alignTop="@+id/forgetpsw"
            android:layout_toRightOf="@+id/backImage"
            android:layout_toEndOf="@+id/backImage"
            android:textColor="@color/click_txt_title"
            android:textSize="@dimen/main_title_text_size"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/forgetpsw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="normal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/click_txt_title"
            android:textSize="@dimen/main_title_text_size"/>

    </RelativeLayout>
    
</merge>

