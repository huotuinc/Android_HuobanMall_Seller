<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_5"
    android:background="@color/main_header_bg">
    <com.android.volley.toolbox.NetworkImageView
        android:layout_marginLeft="15dp"
        android:id="@+id/header_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/icon" />
    <ImageView android:id="@+id/header_img"
        android:layout_marginLeft="15dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/logo_bg"/>
    <ImageButton
        android:id="@+id/header_operate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_shop"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:text="姚生记"
        android:textSize="@dimen/text_size_20"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_height="wrap_content" />
</RelativeLayout>
