<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/ddzs"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/salesdetail_imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号："
        android:textColor="@color/black"
        android:layout_alignTop="@+id/salesdetail_imageView"
        android:layout_toRightOf="@+id/salesdetail_imageView"
        android:id="@+id/order" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1654646846514"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/order"
        android:layout_toRightOf="@+id/order"
        android:layout_toEndOf="@+id/order"
        android:id="@+id/orderNo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-10-12 12:00:00"
        android:id="@+id/salestime"
        android:maxEms="10"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/salesdetail_imageView"
        android:layout_alignLeft="@+id/order"
        android:layout_alignStart="@+id/order" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3100"
        android:textSize="22sp"
        android:textColor="@color/statistic_check_color"
        android:layout_marginRight="20dp"
        android:id="@+id/money"
        android:layout_alignTop="@+id/orderNo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="46dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消费额(元)"
        android:id="@+id/pay"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/salestime"
        android:layout_alignRight="@+id/money"
        android:layout_alignEnd="@+id/money" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/salesdetail_imageView"/>

</RelativeLayout>