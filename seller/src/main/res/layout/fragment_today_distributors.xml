<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huotu.huobanmall.seller.fragment.TodayDistributorsFragment">

    <LinearLayout
        android:id="@+id/todayDistributer_header"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_1">

        <LinearLayout
            android:id="@+id/ll_todayOrder_order"
            android:layout_width="0px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/todayOrder_OrderCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:text="135"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:text="订单"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_todayOrder_member"
            android:layout_width="0px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/todayOrder_MemberCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:text="10"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:text="会员"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_todayOrder_fxs"
            android:layout_width="0px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/todayOrder_fxsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:text="32"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_18"
                android:text="分销商"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_5"
                android:background="#FF3D00"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/todayDistributer_Space"
        android:layout_below="@id/todayDistributer_header"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_2" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/todayDistributer_lineChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_lineChart_Color"
        android:layout_below="@id/todayDistributer_Space"/>
</RelativeLayout>
