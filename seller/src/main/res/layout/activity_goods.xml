<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huotu.huobanmall.seller.activity.GoodsActivity">

    <RelativeLayout
        android:id="@+id/goods_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">
        <include layout="@layout/layout_goods_header"
            ></include>
    </RelativeLayout>

    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/goods_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_header"
        android:visibility="gone"
        android:layout_margin="@dimen/space_5"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/goods_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/goods_indicator" />

</RelativeLayout>
